<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_drawer"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jayesh123.drawer.drawer"
    tools:showIn="@layout/app_bar_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:onClick="a"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:flipInterval="4000"

            android:autoStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/soc"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/soci"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/socia"></LinearLayout>
        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l2"
        android:onClick="b"
        android:layout_weight="3">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:flipInterval="4000"
            android:autoStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nater"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nate"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nat"></LinearLayout>
        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l3"
        android:onClick="c"
        android:layout_weight="3">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:flipInterval="4000"
            android:autoStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/miss"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/misse"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/missee"></LinearLayout>
        </ViewFlipper>
    </LinearLayout>

</LinearLayout>
